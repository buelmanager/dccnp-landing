---
/**
 * Floating Phone Button
 * Fixed bottom-right, with tooltip on hover
 */

interface Props {
  phone?: string;
  label?: string;
}

const { 
  phone = '070-8873-8472',
  label = '전화 문의'
} = Astro.props;
---

<div class="floating-btn" data-floating-btn>
  <a 
    href={`tel:${phone}`} 
    class="floating-btn__link"
    aria-label={label}
  >
    <!-- Pulse ring -->
    <span class="floating-btn__pulse"></span>
    
    <!-- Button background -->
    <span class="floating-btn__bg"></span>
    
    <!-- Icon -->
    <span class="floating-btn__icon">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
      </svg>
    </span>
  </a>
  
  <!-- Tooltip -->
  <div class="floating-btn__tooltip">
    <span class="floating-btn__tooltip-text">{label}</span>
    <span class="floating-btn__tooltip-phone">{phone}</span>
    <span class="floating-btn__tooltip-arrow"></span>
  </div>
</div>

<style>
  .floating-btn {
    position: fixed;
    bottom: var(--space-2xl);
    right: var(--space-2xl);
    z-index: var(--z-fixed);
    opacity: 0;
    transform: translateY(20px);
    transition: 
      opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1),
      transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .floating-btn.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .floating-btn__link {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    border-radius: var(--radius-full);
    overflow: visible;
    cursor: pointer;
    transition: transform var(--transition-base);
  }

  .floating-btn__link:hover {
    transform: scale(1.1);
  }

  .floating-btn__link:active {
    transform: scale(0.95);
  }

  /* Pulse Animation */
  .floating-btn__pulse {
    position: absolute;
    inset: 0;
    border-radius: var(--radius-full);
    background: var(--primary);
    opacity: 0.4;
    animation: floatingPulse 2s ease-in-out infinite;
  }

  @keyframes floatingPulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.4;
    }
    50% {
      transform: scale(1.3);
      opacity: 0;
    }
  }

  /* Background */
  .floating-btn__bg {
    position: absolute;
    inset: 0;
    border-radius: var(--radius-full);
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-hover) 100%);
    box-shadow: 
      0 4px 15px rgba(26, 54, 93, 0.4),
      0 0 30px rgba(26, 54, 93, 0.2);
    transition: box-shadow var(--transition-base);
  }

  .floating-btn__link:hover .floating-btn__bg {
    box-shadow: 
      0 8px 25px rgba(26, 54, 93, 0.5),
      0 0 50px rgba(99, 179, 237, 0.3);
  }

  /* Icon */
  .floating-btn__icon {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-primary);
    transition: transform var(--transition-base);
  }

  .floating-btn__icon svg {
    width: 26px;
    height: 26px;
  }

  .floating-btn__link:hover .floating-btn__icon {
    animation: floatingShake 0.5s ease-in-out;
  }

  @keyframes floatingShake {
    0%, 100% { transform: rotate(0deg); }
    20% { transform: rotate(-15deg); }
    40% { transform: rotate(15deg); }
    60% { transform: rotate(-10deg); }
    80% { transform: rotate(10deg); }
  }

  /* Tooltip */
  .floating-btn__tooltip {
    position: absolute;
    right: calc(100% + var(--space-md));
    top: 50%;
    transform: translateY(-50%) translateX(10px);
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    padding: var(--space-sm) var(--space-md);
    background: rgba(17, 17, 17, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: 
      opacity var(--transition-base),
      transform var(--transition-base),
      visibility var(--transition-base);
  }

  .floating-btn:hover .floating-btn__tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateY(-50%) translateX(0);
  }

  .floating-btn__tooltip-text {
    font-size: var(--font-size-xs);
    font-weight: 500;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  .floating-btn__tooltip-phone {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--accent);
  }

  .floating-btn__tooltip-arrow {
    position: absolute;
    right: -6px;
    top: 50%;
    transform: translateY(-50%) rotate(45deg);
    width: 12px;
    height: 12px;
    background: rgba(17, 17, 17, 0.95);
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Responsive */
  @media (max-width: 719px) {
    .floating-btn {
      bottom: var(--space-lg);
      right: var(--space-lg);
    }

    .floating-btn__link {
      width: 56px;
      height: 56px;
    }

    .floating-btn__icon svg {
      width: 24px;
      height: 24px;
    }

    /* Hide tooltip on mobile - tap to call directly */
    .floating-btn__tooltip {
      display: none;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .floating-btn {
      opacity: 1;
      transform: none;
    }

    .floating-btn__pulse {
      animation: none;
    }

    .floating-btn__link:hover .floating-btn__icon {
      animation: none;
    }
  }
</style>

<script>
  function initFloatingButton() {
    const btn = document.querySelector('[data-floating-btn]');
    if (!btn) return;

    // Show button after initial load animation
    setTimeout(() => {
      btn.classList.add('is-visible');
    }, 2000);

    // Optional: Hide on scroll up, show on scroll down
    let lastScrollY = window.scrollY;
    let ticking = false;

    const handleScroll = () => {
      const currentScrollY = window.scrollY;
      
      // Only show after scrolling past hero
      if (currentScrollY > window.innerHeight * 0.5) {
        btn.classList.add('is-visible');
      }
      
      lastScrollY = currentScrollY;
      ticking = false;
    };

    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(handleScroll);
        ticking = true;
      }
    }, { passive: true });
  }

  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFloatingButton);
  } else {
    initFloatingButton();
  }

  // Astro page transitions
  document.addEventListener('astro:page-load', initFloatingButton);
</script>
