    );
  }

  /* Hero Slides */
  .hero-slides {
    position: relative;
    width: 100%;
  }

  .hero-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: visibility 0s linear 0.6s;
  }

  .hero-slide.is-active {
    position: relative;
    opacity: 1;
