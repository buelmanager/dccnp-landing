<script>
  // Premium GSAP Hero Animation with Carousel, Parallax, Mouse Tracking & Particles
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  // Register ScrollTrigger plugin
  gsap.registerPlugin(ScrollTrigger);

  // Check for reduced motion preference
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  function initHeroAnimation() {
    const hero = document.querySelector('[data-hero]') as HTMLElement;
    if (!hero || prefersReducedMotion) return;

    // Elements
    const bgWrapper = hero.querySelector('[data-hero-bg-wrapper]') as HTMLElement;
    const gradientLayer = hero.querySelector('[data-hero-gradient]') as HTMLElement;
    const geoShapes = hero.querySelectorAll('.geo-shape');
    const particles = hero.querySelectorAll('.particle');
    const mouseLight = hero.querySelector('[data-hero-mouse-light]') as HTMLElement;
    const brandLines = hero.querySelectorAll('.brand-line');
    const stats = hero.querySelector('[data-hero-stats]') as HTMLElement;
    const counters = hero.querySelectorAll('[data-counter]');
    const scrollIndicator = hero.querySelector('[data-scroll-indicator]') as HTMLElement;
    const heroContent = hero.querySelector('[data-hero-content]') as HTMLElement;

    // Carousel elements
    const slides = hero.querySelectorAll('[data-hero-slide]') as NodeListOf<HTMLElement>;
    const indicators = hero.querySelectorAll('[data-hero-indicator]') as NodeListOf<HTMLElement>;
    const indicatorsContainer = hero.querySelector('[data-hero-indicators]') as HTMLElement;

    const SLIDE_COUNT = slides.length;
    const AUTO_PLAY_INTERVAL = 6000; // 6 seconds per slide
    let currentSlide = 0;
    let autoPlayTimer: ReturnType<typeof setTimeout> | null = null;
    let progressTween: gsap.core.Tween | null = null;
    let isTransitioning = false;
    let initialAnimationDone = false;

    // =====================
    // SPLIT TEXT SETUP (for all slides)
    // =====================

    slides.forEach((slide) => {
      const titleTexts = slide.querySelectorAll('[data-split-text]');
      titleTexts.forEach((textEl) => {
        const el = textEl as HTMLElement;
        const text = el.textContent || '';
        el.innerHTML = '';

        text.split('').forEach((char) => {
          const span = document.createElement('span');
          if (char === ' ') {
            span.className = 'char char-space';
            span.innerHTML = '&nbsp;';
          } else {
            span.className = 'char';
            span.textContent = char;
          }
          el.appendChild(span);
        });

        gsap.set(el, { opacity: 1, y: 0 });
      });

      // Set glitch data on accent texts
      const accentText = slide.querySelector('[data-accent]') as HTMLElement;
      if (accentText) {
        accentText.setAttribute('data-text', accentText.textContent || '');
      }
    });

    // =====================
    // SLIDE ANIMATION FUNCTIONS
    // =====================

    function animateSlideIn(slide: HTMLElement, isInitial = false) {
      const eyebrow = slide.querySelector('[data-hero-eyebrow]') as HTMLElement;
      const eyebrowLine = slide.querySelector('.hero-eyebrow-line') as HTMLElement;
      const eyebrowText = slide.querySelector('.hero-eyebrow-text') as HTMLElement;
      const chars = slide.querySelectorAll('.char');
      const accentText = slide.querySelector('[data-accent]') as HTMLElement;
      const subtitleText = slide.querySelector('.hero-subtitle-text') as HTMLElement;
      const cta = slide.querySelector('[data-hero-cta]') as HTMLElement;

      // Reset elements
      gsap.set(eyebrow, { opacity: 0, y: 20 });
      gsap.set(eyebrowLine, { width: 0 });
      gsap.set(eyebrowText, { opacity: 0 });
      gsap.set(chars, { opacity: 0, y: '100%' });
      gsap.set(subtitleText, { opacity: 0, y: 30 });
      gsap.set(cta, { opacity: 0, y: 20 });

      const tl = gsap.timeline({
        delay: isInitial ? 0.5 : 0.1,
        onComplete: () => {
          isTransitioning = false;
        }
      });

      // Eyebrow
      tl.to(eyebrow, { opacity: 1, y: 0, duration: 0.6, ease: 'power3.out' }, 0)
        .to(eyebrowLine, { width: 40, duration: 0.5, ease: 'power2.inOut' }, 0.1)
        .to(eyebrowText, { opacity: 1, duration: 0.4 }, 0.3);

      // Characters
      tl.to(chars, {
        opacity: 1,
        y: 0,
        duration: 0.6,
        stagger: { amount: 0.6, from: 'start' },
        ease: 'power4.out',
      }, 0.3);

      // Glitch effect
      if (accentText) {
        tl.call(() => {
          accentText.setAttribute('data-glitch', 'true');
          setTimeout(() => accentText.removeAttribute('data-glitch'), 1500);
        }, [], 1.2);
      }

      // Subtitle
      tl.to(subtitleText, { opacity: 1, y: 0, duration: 0.6, ease: 'power3.out' }, '-=0.3');

      // CTA
      tl.to(cta, { opacity: 1, y: 0, duration: 0.6, ease: 'power3.out' }, '-=0.3');

      return tl;
    }

    function animateSlideOut(slide: HTMLElement) {
      const eyebrow = slide.querySelector('[data-hero-eyebrow]') as HTMLElement;
      const chars = slide.querySelectorAll('.char');
      const subtitleText = slide.querySelector('.hero-subtitle-text') as HTMLElement;
      const cta = slide.querySelector('[data-hero-cta]') as HTMLElement;

      const tl = gsap.timeline();

      tl.to([cta, subtitleText], {
        opacity: 0,
        y: -20,
        duration: 0.35,
        ease: 'power2.in',
        stagger: 0.05,
      }, 0);

      tl.to(chars, {
        opacity: 0,
        y: '-60%',
        duration: 0.35,
        stagger: { amount: 0.2, from: 'end' },
        ease: 'power2.in',
      }, 0.05);

      tl.to(eyebrow, {
        opacity: 0,
        y: -15,
        duration: 0.3,
        ease: 'power2.in',
      }, 0.1);

      return tl;
    }

    // =====================
    // CAROUSEL CONTROLLER
    // =====================

    function goToSlide(index: number) {
      if (isTransitioning || index === currentSlide) return;
      isTransitioning = true;

      const oldSlide = slides[currentSlide];
      const newSlide = slides[index];

      // Update indicators
      indicators.forEach((ind, i) => {
        ind.classList.remove('is-active', 'is-done');
        if (i < index) ind.classList.add('is-done');
      });
      indicators[index].classList.add('is-active');

      // Animate out old slide, then swap and animate in new
      const outTl = animateSlideOut(oldSlide);
      outTl.call(() => {
        oldSlide.classList.remove('is-active');
        newSlide.classList.add('is-active');
        currentSlide = index;
        animateSlideIn(newSlide);
      });

      // Restart progress animation
      startProgress(index);
    }

    function nextSlide() {
      const next = (currentSlide + 1) % SLIDE_COUNT;
      goToSlide(next);
    }

    // =====================
    // PROGRESS BAR & AUTO-PLAY
    // =====================

    function startProgress(index: number) {
      // Kill previous progress
      if (progressTween) progressTween.kill();
      if (autoPlayTimer) clearTimeout(autoPlayTimer);

      // Reset all progress bars
      indicators.forEach((ind) => {
        const bar = ind.querySelector('.hero-indicator-progress') as HTMLElement;
        gsap.set(bar, { width: '0%' });
      });

      // Set completed indicators
      indicators.forEach((ind, i) => {
        if (i < index) {
          const bar = ind.querySelector('.hero-indicator-progress') as HTMLElement;
          gsap.set(bar, { width: '100%' });
        }
      });

      // Animate current progress bar
      const currentBar = indicators[index].querySelector('.hero-indicator-progress') as HTMLElement;
      progressTween = gsap.fromTo(currentBar,
        { width: '0%' },
        {
          width: '100%',
          duration: AUTO_PLAY_INTERVAL / 1000,
          ease: 'none',
          onComplete: nextSlide,
        }
      );
    }

    function startAutoPlay() {
      startProgress(currentSlide);
    }

    function pauseAutoPlay() {
      if (progressTween) progressTween.pause();
    }

    function resumeAutoPlay() {
      if (progressTween) progressTween.resume();
    }

    // =====================
    // INDICATOR CLICK HANDLERS
    // =====================

    indicators.forEach((indicator, i) => {
      indicator.addEventListener('click', () => {
        if (i !== currentSlide && !isTransitioning) {
          goToSlide(i);
        }
      });
    });

    // Pause on hover
    hero.addEventListener('mouseenter', pauseAutoPlay);
    hero.addEventListener('mouseleave', () => {
      if (initialAnimationDone) resumeAutoPlay();
    });

    // =====================
    // 1. BACKGROUND ZOOM & PARALLAX
    // =====================

    gsap.fromTo(bgWrapper,
      { scale: 1.2 },
      { scale: 1, duration: 2.5, ease: 'power2.out' }
    );

    gsap.to(bgWrapper, {
      yPercent: 30,
      ease: 'none',
      scrollTrigger: {
        trigger: hero,
        start: 'top top',
        end: 'bottom top',
        scrub: 1,
      }
    });

    gsap.to(heroContent, {
      yPercent: -15,
      ease: 'none',
      scrollTrigger: {
        trigger: hero,
        start: 'top top',
        end: 'bottom top',
        scrub: 1,
      }
    });

    // =====================
    // 2. ANIMATED GRADIENT BACKGROUND
    // =====================

    gsap.to(gradientLayer, { opacity: 1, duration: 2, delay: 0.5 });
    gsap.to(gradientLayer, { rotation: 360, duration: 60, ease: 'none', repeat: -1 });
    gsap.to(gradientLayer, { x: '5%', y: '3%', duration: 15, ease: 'sine.inOut', yoyo: true, repeat: -1 });

    // =====================
    // 3. FLOATING GEOMETRIC ELEMENTS
    // =====================

    const geoEntranceTl = gsap.timeline({
      delay: 1.5,
      onComplete: () => startFloatingAnimations(),
    });

    geoEntranceTl.to(geoShapes, {
      opacity: 1, scale: 1, duration: 0.8, stagger: 0.2, ease: 'back.out(1.7)',
    });

    function startFloatingAnimations() {
      geoShapes.forEach((shape, i) => {
        gsap.to(shape, {
          y: `${-30 + i * 10}`, x: `${15 - i * 5}`, rotation: 360,
          duration: 20 + i * 5, ease: 'none', repeat: -1,
        });
        gsap.to(shape, {
          scale: 1.1, duration: 4 + i, ease: 'sine.inOut', yoyo: true, repeat: -1,
        });
      });
    }

    // =====================
    // 4. PARTICLE SYSTEM
    // =====================

    particles.forEach((particle, i) => {
      const el = particle as HTMLElement;
      gsap.set(el, { left: `${Math.random() * 100}%`, top: `${Math.random() * 100}%` });
      gsap.to(el, { opacity: 0.3 + Math.random() * 0.4, duration: 1, delay: 2 + i * 0.1 });
      gsap.to(el, {
        y: `-=${50 + Math.random() * 100}`, x: `+=${-50 + Math.random() * 100}`,
        duration: 10 + Math.random() * 20, ease: 'none', repeat: -1, yoyo: true, delay: Math.random() * 5,
      });
      gsap.to(el, {
        opacity: 0.1, duration: 1 + Math.random() * 2, ease: 'sine.inOut', yoyo: true, repeat: -1, delay: Math.random() * 3,
      });
    });

    // =====================
    // 5. MOUSE FOLLOWING INTERACTION
    // =====================

    let mouseX = window.innerWidth / 2;
    let mouseY = window.innerHeight / 2;
    let currentX = mouseX;
    let currentY = mouseY;

    gsap.to(mouseLight, { opacity: 1, duration: 1, delay: 2 });

    const updateMouseLight = () => {
      currentX += (mouseX - currentX) * 0.08;
      currentY += (mouseY - currentY) * 0.08;
      gsap.set(mouseLight, { x: currentX, y: currentY });
      requestAnimationFrame(updateMouseLight);
    };
    updateMouseLight();

    hero.addEventListener('mousemove', (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
      geoShapes.forEach((shape, i) => {
        const depth = 0.02 + i * 0.01;
        gsap.to(shape, {
          x: (e.clientX - window.innerWidth / 2) * depth,
          y: (e.clientY - window.innerHeight / 2) * depth,
          duration: 1, ease: 'power2.out',
        });
      });
    });

    // Magnetic buttons (for all slides)
    const allMagneticBtns = hero.querySelectorAll('[data-magnetic]');
    allMagneticBtns.forEach((btn) => {
      const button = btn as HTMLElement;
      button.addEventListener('mousemove', (e: MouseEvent) => {
        const rect = button.getBoundingClientRect();
        gsap.to(button, {
          x: (e.clientX - rect.left - rect.width / 2) * 0.2,
          y: (e.clientY - rect.top - rect.height / 2) * 0.2,
          duration: 0.3, ease: 'power2.out',
        });
      });
      button.addEventListener('mouseleave', () => {
        gsap.to(button, { x: 0, y: 0, duration: 0.5, ease: 'elastic.out(1, 0.5)' });
      });
    });

    // =====================
    // 6. INITIAL ENTRANCE TIMELINE
    // =====================

    const tl = gsap.timeline({
      defaults: { ease: 'power3.out', duration: 1 },
      delay: 0.3,
    });

    // Brand lines
    tl.to(brandLines, { opacity: 0.5, duration: 1.5, stagger: 0.2 }, 0);

    // Animate first slide content
    const firstSlide = slides[0];
    const firstEyebrow = firstSlide.querySelector('[data-hero-eyebrow]') as HTMLElement;
    const firstEyebrowLine = firstSlide.querySelector('.hero-eyebrow-line') as HTMLElement;
    const firstEyebrowText = firstSlide.querySelector('.hero-eyebrow-text') as HTMLElement;
    const firstChars = firstSlide.querySelectorAll('.char');
    const firstAccent = firstSlide.querySelector('[data-accent]') as HTMLElement;
    const firstSubtitle = firstSlide.querySelector('.hero-subtitle-text') as HTMLElement;
    const firstCta = firstSlide.querySelector('[data-hero-cta]') as HTMLElement;

    // Eyebrow
    tl.to(firstEyebrow, { opacity: 1, y: 0, duration: 0.8 }, 0.5)
      .to(firstEyebrowLine, { width: 40, duration: 0.6, ease: 'power2.inOut' }, 0.6)
      .to(firstEyebrowText, { opacity: 1, duration: 0.5 }, 0.9);

    // Characters
    tl.to(firstChars, {
      opacity: 1, y: 0, duration: 0.8,
      stagger: { amount: 0.8, from: 'start' },
      ease: 'power4.out',
    }, 1);

    // Glitch
    if (firstAccent) {
      tl.call(() => {
        firstAccent.setAttribute('data-glitch', 'true');
        setTimeout(() => firstAccent.removeAttribute('data-glitch'), 2000);
      }, [], 2.2);
    }

    // Subtitle
    tl.to(firstSubtitle, { opacity: 1, y: 0, duration: 0.8 }, '-=0.4');

    // CTA
    tl.to(firstCta, { opacity: 1, y: 0, duration: 0.8 }, '-=0.4');

    // Stats
    tl.to(stats, { opacity: 1, x: 0, duration: 0.8 }, '-=0.4');

    // Counter animation
    counters.forEach((counter) => {
      const el = counter as HTMLElement;
      const target = parseInt(el.dataset.counter || '0');
      gsap.to({ value: 0 }, {
        value: target, duration: 2, delay: 2.5, ease: 'power2.out',
        onUpdate: function() {
          const current = Math.round(this.targets()[0].value);
          el.textContent = target >= 1000 ? (current / 1000).toFixed(1) + 'K' : current.toString();
        },
      });
    });

    // Indicators
    tl.to(indicatorsContainer, { opacity: 1, y: 0, duration: 0.6 }, '-=0.3');

    // Scroll indicator
    tl.to(scrollIndicator, { opacity: 1, duration: 0.6 }, '-=0.2');

    // Start auto-play after initial animation completes
    tl.call(() => {
      initialAnimationDone = true;
      startAutoPlay();
    });

    // =====================
    // 7. SCROLL INTERACTIONS
    // =====================

    ScrollTrigger.create({
      trigger: hero,
      start: 'top top',
      end: '50% top',
      scrub: 1,
      onUpdate: (self) => {
        const progress = self.progress;
        const activeSlide = slides[currentSlide];
        const activeEyebrow = activeSlide?.querySelector('[data-hero-eyebrow]');
        const activeCta = activeSlide?.querySelector('[data-hero-cta]');
        const activeChars = activeSlide?.querySelectorAll('.char');

        gsap.set([activeEyebrow, activeCta, stats, scrollIndicator, indicatorsContainer].filter(Boolean), {
          opacity: 1 - progress * 1.5,
        });
        if (activeChars) {
          gsap.set(activeChars, { opacity: 1 - progress * 1.2 });
        }
      },
    });

    scrollIndicator?.addEventListener('click', () => {
      const nextSection = document.querySelector('#about, #services, .section');
      if (nextSection) nextSection.scrollIntoView({ behavior: 'smooth' });
    });
  }

  // Cleanup function
  function cleanupHeroAnimation() {
    ScrollTrigger.getAll().forEach(trigger => trigger.kill());
    gsap.killTweensOf('*');
  }

  document.addEventListener('DOMContentLoaded', initHeroAnimation);
  document.addEventListener('astro:page-load', initHeroAnimation);
  document.addEventListener('astro:before-preparation', cleanupHeroAnimation);
</script>
