---
/**
 * Hero Section Component
 * Full-screen hero with premium GSAP animations, parallax, and mouse interactions
 * Inspired by luxury automotive brand landing pages
 */
---

<section id="home" class="hero" data-hero>
  <!-- Background Layer -->
  <div class="hero-background" data-hero-bg>
    <!-- Animated Gradient Background -->
    <div class="hero-gradient-layer" data-hero-gradient></div>
    
    <!-- YouTube Video Background -->
    <div class="hero-video-wrapper" data-hero-bg-wrapper>
      <iframe
        class="hero-video"
        src="https://www.youtube.com/embed/gYO1uk7vIcc?autoplay=1&mute=1&loop=1&playlist=gYO1uk7vIcc&controls=0&showinfo=0&rel=0&modestbranding=1&playsinline=1&enablejsapi=1"
        title="Background Video"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
        data-hero-video
      ></iframe>
    </div>
    
    <!-- Overlay -->
    <div class="hero-overlay"></div>
    
    <!-- Noise Texture -->
    <div class="hero-noise"></div>
    
    <!-- Decorative Elements -->
    <div class="hero-grid"></div>
    
    <!-- Floating Geometric Elements -->
    <div class="hero-geometrics" data-hero-geometrics>
      <div class="geo-shape geo-shape--1" data-geo="1">
        <svg viewBox="0 0 100 100" fill="none">
          <circle cx="50" cy="50" r="48" stroke="currentColor" stroke-width="0.5"/>
          <circle cx="50" cy="50" r="35" stroke="currentColor" stroke-width="0.3"/>
        </svg>
      </div>
      <div class="geo-shape geo-shape--2" data-geo="2">
        <svg viewBox="0 0 100 100" fill="none">
          <rect x="10" y="10" width="80" height="80" stroke="currentColor" stroke-width="0.5" transform="rotate(45 50 50)"/>
        </svg>
      </div>
      <div class="geo-shape geo-shape--3" data-geo="3">
        <svg viewBox="0 0 100 100" fill="none">
          <polygon points="50,5 95,75 5,75" stroke="currentColor" stroke-width="0.5"/>
        </svg>
      </div>
      <div class="geo-shape geo-shape--4" data-geo="4">
        <svg viewBox="0 0 100 100" fill="none">
          <line x1="0" y1="50" x2="100" y2="50" stroke="currentColor" stroke-width="0.3"/>
          <line x1="50" y1="0" x2="50" y2="100" stroke="currentColor" stroke-width="0.3"/>
          <circle cx="50" cy="50" r="20" stroke="currentColor" stroke-width="0.5"/>
        </svg>
      </div>
      <div class="geo-shape geo-shape--5" data-geo="5">
        <svg viewBox="0 0 100 100" fill="none">
          <path d="M25,50 Q50,10 75,50 Q50,90 25,50" stroke="currentColor" stroke-width="0.5"/>
        </svg>
      </div>
    </div>
    
    <!-- Particle Dots -->
    <div class="hero-particles" data-hero-particles>
      {Array.from({ length: 30 }).map((_, i) => (
        <div class="particle" data-particle={i} />
      ))}
    </div>
    
    <!-- Mouse Follower Light -->
    <div class="hero-mouse-light" data-hero-mouse-light></div>
  </div>

  <!-- Content -->
  <div class="hero-content" data-hero-content>
    <!-- Slide Container -->
    <div class="hero-slides" data-hero-slides>
      <!-- Slide 0 -->
      <div class="hero-slide is-active" data-hero-slide="0">
        <div class="hero-content-inner">
          <span class="hero-eyebrow" data-hero-eyebrow>
            <span class="hero-eyebrow-line"></span>
            <span class="hero-eyebrow-text">SINCE 2010</span>
          </span>
          <h2 class="hero-title" data-hero-title>
            <span class="hero-title-line">
              <span class="hero-title-text" data-split-text>당신의 Brand를</span>
            </span>
            <span class="hero-title-line">
              <span class="hero-title-text hero-title-accent" data-split-text data-accent>Design하다</span>
            </span>
          </h2>
          <p class="hero-subtitle" data-hero-subtitle>
            <span class="hero-subtitle-text">LED Signage · Neon Sign · Advertising Design - 15년 경력의 Premium 간판 전문</span>
          </p>
          <div class="hero-cta" data-hero-cta>
            <a href="/shop" class="button button--primary hero-cta-btn" data-magnetic>
              <span class="btn-text">쇼핑몰 둘러보기</span>
              <span class="btn-shine"></span>
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
                <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
            <a href="#portfolio" class="button button--outline hero-cta-btn" data-magnetic>
              <span class="btn-text">포트폴리오 보기</span>
              <span class="btn-shine"></span>
            </a>
          </div>
        </div>
      </div>

      <!-- Slide 1 -->
      <div class="hero-slide" data-hero-slide="1">
        <div class="hero-content-inner">
          <span class="hero-eyebrow" data-hero-eyebrow>
            <span class="hero-eyebrow-line"></span>
            <span class="hero-eyebrow-text">LED SIGNAGE</span>
          </span>
          <h2 class="hero-title" data-hero-title>
            <span class="hero-title-line">
              <span class="hero-title-text" data-split-text>빛으로 만드는</span>
            </span>
            <span class="hero-title-line">
              <span class="hero-title-text hero-title-accent" data-split-text data-accent>Brand Identity</span>
            </span>
          </h2>
          <p class="hero-subtitle" data-hero-subtitle>
            <span class="hero-subtitle-text">최신 LED 기술로 브랜드의 가치를 높이는 Signage Solution을 제공합니다</span>
          </p>
          <div class="hero-cta" data-hero-cta>
            <a href="/shop" class="button button--primary hero-cta-btn" data-magnetic>
              <span class="btn-text">LED 간판 보기</span>
              <span class="btn-shine"></span>
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
                <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
            <a href="#contact" class="button button--outline hero-cta-btn" data-magnetic>
              <span class="btn-text">무료 상담 신청</span>
              <span class="btn-shine"></span>
            </a>
          </div>
        </div>
      </div>

      <!-- Slide 2 -->
      <div class="hero-slide" data-hero-slide="2">
        <div class="hero-content-inner">
          <span class="hero-eyebrow" data-hero-eyebrow>
            <span class="hero-eyebrow-line"></span>
            <span class="hero-eyebrow-text">NEON SIGN</span>
          </span>
          <h2 class="hero-title" data-hero-title>
            <span class="hero-title-line">
              <span class="hero-title-text" data-split-text>Creative한</span>
            </span>
            <span class="hero-title-line">
              <span class="hero-title-text hero-title-accent" data-split-text data-accent>Neon Art</span>
            </span>
          </h2>
          <p class="hero-subtitle" data-hero-subtitle>
            <span class="hero-subtitle-text">감각적인 Neon Sign으로 공간에 특별한 Atmosphere를 더합니다</span>
          </p>
          <div class="hero-cta" data-hero-cta>
            <a href="/shop" class="button button--primary hero-cta-btn" data-magnetic>
              <span class="btn-text">네온사인 컬렉션</span>
              <span class="btn-shine"></span>
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
                <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
            <a href="#portfolio" class="button button--outline hero-cta-btn" data-magnetic>
              <span class="btn-text">시공 사례 보기</span>
              <span class="btn-shine"></span>
            </a>
          </div>
        </div>
      </div>

      <!-- Slide 3 -->
      <div class="hero-slide" data-hero-slide="3">
        <div class="hero-content-inner">
          <span class="hero-eyebrow" data-hero-eyebrow>
            <span class="hero-eyebrow-line"></span>
            <span class="hero-eyebrow-text">TOTAL SOLUTION</span>
          </span>
          <h2 class="hero-title" data-hero-title>
            <span class="hero-title-line">
              <span class="hero-title-text" data-split-text>Design부터</span>
            </span>
            <span class="hero-title-line">
              <span class="hero-title-text hero-title-accent" data-split-text data-accent>시공까지 One-Stop</span>
            </span>
          </h2>
          <p class="hero-subtitle" data-hero-subtitle>
            <span class="hero-subtitle-text">기획 · Design · 제작 · 시공 · A/S까지 All-in-One Service를 경험하세요</span>
          </p>
          <div class="hero-cta" data-hero-cta>
            <a href="#contact" class="button button--primary hero-cta-btn" data-magnetic>
              <span class="btn-text">견적 문의하기</span>
              <span class="btn-shine"></span>
              <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
                <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
            <a href="#about" class="button button--outline hero-cta-btn" data-magnetic>
              <span class="btn-text">회사 소개</span>
              <span class="btn-shine"></span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Slide Indicators -->
    <div class="hero-indicators" data-hero-indicators>
      <button class="hero-indicator is-active" data-hero-indicator="0" aria-label="슬라이드 1">
        <span class="hero-indicator-progress"></span>
      </button>
      <button class="hero-indicator" data-hero-indicator="1" aria-label="슬라이드 2">
        <span class="hero-indicator-progress"></span>
      </button>
      <button class="hero-indicator" data-hero-indicator="2" aria-label="슬라이드 3">
        <span class="hero-indicator-progress"></span>
      </button>
      <button class="hero-indicator" data-hero-indicator="3" aria-label="슬라이드 4">
        <span class="hero-indicator-progress"></span>
      </button>
    </div>

    <!-- Stats Badge -->
    <div class="hero-stats" data-hero-stats>
      <div class="hero-stat">
        <span class="hero-stat-number" data-counter="15">0</span>
        <span class="hero-stat-label">YEARS</span>
      </div>
      <div class="hero-stat-divider"></div>
      <div class="hero-stat">
        <span class="hero-stat-number" data-counter="1000">0</span>
        <span class="hero-stat-suffix">+</span>
        <span class="hero-stat-label">PROJECTS</span>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator" data-scroll-indicator>
    <span class="scroll-indicator-text">SCROLL</span>
    <div class="scroll-indicator-line">
      <div class="scroll-indicator-dot"></div>
    </div>
    <svg class="scroll-indicator-arrow" width="12" height="12" viewBox="0 0 12 12" fill="none" aria-hidden="true">
      <path d="M2 4l4 4 4-4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>
  
  <!-- Luxury Brand Lines -->
  <div class="hero-brand-lines">
    <div class="brand-line brand-line--left"></div>
    <div class="brand-line brand-line--right"></div>
  </div>
</section>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    width: 100%;
    height: 100vh;
    height: 100dvh;
    min-height: 600px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  /* Background */
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  
  /* Animated Gradient Layer */
  .hero-gradient-layer {
    position: absolute;
    inset: -50%;
    width: 200%;
    height: 200%;
    background: 
      radial-gradient(ellipse 80% 50% at 20% 40%, rgba(26, 54, 93, 0.4) 0%, transparent 50%),
      radial-gradient(ellipse 60% 40% at 80% 60%, rgba(79, 70, 229, 0.2) 0%, transparent 50%),
      radial-gradient(ellipse 50% 30% at 40% 80%, rgba(234, 179, 8, 0.15) 0%, transparent 50%);
    opacity: 0;
    will-change: transform;
  }
  
  /* YouTube Video Wrapper */
  .hero-video-wrapper {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .hero-video {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;
    width: max(100%, calc(100vh * 16 / 9));
    height: max(100%, calc(100vw * 9 / 16));
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.75) 0%,
      rgba(0, 0, 0, 0.4) 40%,
      rgba(0, 0, 0, 0.65) 100%
    );
  }

  .hero-noise {
    position: absolute;
    inset: 0;
    opacity: 0.04;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    pointer-events: none;
    mix-blend-mode: overlay;
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black, transparent);
    pointer-events: none;
  }
  
  /* Floating Geometric Elements */
  .hero-geometrics {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }
  
  .geo-shape {
    position: absolute;
    color: rgba(255, 255, 255, 0.06);
    will-change: transform;
    opacity: 0;
    transform: scale(0);
  }
  
  .geo-shape svg {
    width: 100%;
    height: 100%;
  }
  
  .geo-shape--1 {
    top: 10%;
    right: 15%;
    width: 300px;
    height: 300px;
  }
  
  .geo-shape--2 {
    top: 60%;
    left: 5%;
    width: 200px;
    height: 200px;
  }
  
  .geo-shape--3 {
    bottom: 20%;
    right: 25%;
    width: 150px;
    height: 150px;
  }
  
  .geo-shape--4 {
    top: 30%;
    left: 20%;
    width: 180px;
    height: 180px;
  }
  
  .geo-shape--5 {
    top: 5%;
    left: 40%;
    width: 120px;
    height: 120px;
  }
  
  /* Particle Dots */
  .hero-particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }
  
  .particle {
    position: absolute;
    width: 3px;
    height: 3px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    opacity: 0;
    will-change: transform, opacity;
  }
  
  .particle::before {
    content: '';
    position: absolute;
    inset: -2px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.4) 0%, transparent 70%);
    border-radius: 50%;
  }
  
  /* Mouse Follower Light */
  .hero-mouse-light {
    position: absolute;
    width: 600px;
    height: 600px;
    background: radial-gradient(
      circle,
      rgba(79, 70, 229, 0.15) 0%,
      rgba(26, 54, 93, 0.1) 30%,
      transparent 70%
    );
    border-radius: 50%;
    pointer-events: none;
    opacity: 0;
    transform: translate(-50%, -50%);
    will-change: transform, opacity;
    mix-blend-mode: screen;
  }
  
  /* Luxury Brand Lines */
  .hero-brand-lines {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 2;
  }
  
  .brand-line {
    position: absolute;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(255, 255, 255, 0.1) 20%,
      rgba(255, 255, 255, 0.1) 80%,
      transparent 100%
    );
    width: 1px;
    height: 100%;
    opacity: 0;
  }
  
  .brand-line--left {
    left: 10%;
  }
  
  .brand-line--right {
    right: 10%;
  }

  /* Content */
  .hero-content {
    position: relative;
    z-index: 1;
    width: 100%;
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--container-padding);
    padding-top: var(--header-height);
  }

  .hero-content-inner {
    max-width: 800px;
  }

  /* Eyebrow */
  .hero-eyebrow {
    display: inline-flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
    opacity: 0;
    transform: translateY(20px);
  }

  .hero-eyebrow-line {
    width: 0;
    height: 1px;
    background: var(--primary-light);
    will-change: width;
  }

  .hero-eyebrow-text {
    font-size: var(--font-size-xs);
    font-weight: 500;
    letter-spacing: var(--letter-spacing-wider);
    color: var(--primary-light);
    opacity: 0;
  }

  /* Title */
  .hero-title {
    margin-bottom: var(--space-xl);
    overflow: hidden;
  }

  .hero-title-line {
    display: block;
    overflow: hidden;
    position: relative;
  }

  .hero-title-text {
    display: inline-block;
    font-size: clamp(2.5rem, 8vw, var(--font-size-6xl));
    font-weight: 600;
    line-height: 1.1;
    letter-spacing: var(--letter-spacing-tight);
    color: var(--text-primary);
    opacity: 0;
    transform: translateY(100%);
    will-change: transform, opacity;
  }
  
  /* Split Text Characters */
  .char {
    display: inline-block;
    opacity: 0;
    transform: translateY(100%);
    will-change: transform, opacity;
  }
  
  .char-space {
    width: 0.3em;
  }

  .hero-title-accent {
    color: var(--primary-light);
  }
  
  /* Glitch Effect on Accent */
  .hero-title-accent[data-glitch]::before,
  .hero-title-accent[data-glitch]::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    color: inherit;
  }
  
  .hero-title-accent[data-glitch]::before {
    left: 2px;
    text-shadow: -2px 0 #ff0080;
    clip-path: inset(0 0 0 0);
    animation: glitch-1 2s infinite linear alternate-reverse;
  }
  
  .hero-title-accent[data-glitch]::after {
    left: -2px;
    text-shadow: 2px 0 #00ffff;
    clip-path: inset(0 0 0 0);
    animation: glitch-2 2s infinite linear alternate-reverse;
  }
  
  @keyframes glitch-1 {
    0%, 100% { clip-path: inset(0 0 95% 0); }
    20% { clip-path: inset(20% 0 60% 0); }
    40% { clip-path: inset(40% 0 40% 0); }
    60% { clip-path: inset(60% 0 20% 0); }
    80% { clip-path: inset(80% 0 5% 0); }
  }
  
  @keyframes glitch-2 {
    0%, 100% { clip-path: inset(95% 0 0 0); }
    20% { clip-path: inset(60% 0 20% 0); }
    40% { clip-path: inset(40% 0 40% 0); }
    60% { clip-path: inset(20% 0 60% 0); }
    80% { clip-path: inset(5% 0 80% 0); }
  }

  /* Subtitle */
  .hero-subtitle {
    margin-bottom: var(--space-2xl);
    overflow: hidden;
  }

  .hero-subtitle-text {
    display: inline-block;
    font-size: var(--font-size-lg);
    font-weight: 300;
    line-height: var(--line-height-relaxed);
    color: var(--text-secondary);
    opacity: 0;
    transform: translateY(30px);
  }

  /* CTA */
  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    opacity: 0;
    transform: translateY(20px);
  }

  .hero-cta-btn {
    position: relative;
    overflow: hidden;
    will-change: transform;
  }
  
  .btn-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.2) 50%,
      transparent 100%
    );
    transform: skewX(-25deg);
    pointer-events: none;
  }
  
  .hero-cta-btn:hover .btn-shine {
    animation: btnShine 0.6s ease-out;
  }
  
  @keyframes btnShine {
    0% { left: -100%; }
    100% { left: 200%; }
  }

  .hero-cta-btn svg {
    transition: transform var(--transition-base);
  }

  .hero-cta-btn:hover svg {
    transform: translateX(4px);
  }

  /* Stats Badge */
  .hero-stats {
    position: absolute;
    right: var(--container-padding);
    bottom: 120px;
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    padding: var(--space-lg) var(--space-xl);
    background: rgba(26, 54, 93, 0.15);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    opacity: 0;
    transform: translateX(30px);
  }

  .hero-stat {
    text-align: center;
    position: relative;
  }

  .hero-stat-number {
    display: inline-block;
    font-size: var(--font-size-3xl);
    font-weight: 600;
    line-height: 1;
    color: var(--text-primary);
    font-variant-numeric: tabular-nums;
  }
  
  .hero-stat-suffix {
    display: inline-block;
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--primary-light);
    margin-left: 2px;
  }

  .hero-stat-label {
    display: block;
    margin-top: var(--space-xs);
    font-size: var(--font-size-xs);
    font-weight: 500;
    letter-spacing: var(--letter-spacing-wider);
    color: var(--text-muted);
  }

  .hero-stat-divider {
    width: 1px;
    height: 40px;
    background: linear-gradient(
      180deg,
