  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .scroll-indicator-dot,
    .scroll-indicator-arrow {
      animation: none;
    }
    
    .hero-eyebrow,
    .hero-title-text,
    .hero-subtitle-text,
    .hero-cta,
    .hero-stats,
    .hero-indicators,
    .scroll-indicator,
    .geo-shape,
    .particle,
    .brand-line,
    .hero-gradient-layer,
    .char {
      opacity: 1 !important;
      transform: none !important;
      animation: none !important;
