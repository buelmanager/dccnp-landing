  ];

  function initClientModal() {
    const modal = document.getElementById('clientModal');
    if (!modal) return;

    const backdrop = modal.querySelector('.client-modal__backdrop') as HTMLElement;
    const container = modal.querySelector('.client-modal__container') as HTMLElement;
    const closeBtn = modal.querySelector('.client-modal__close') as HTMLElement;
    const modalImg = document.getElementById('clientModalImg') as HTMLImageElement;
    const modalType = document.getElementById('clientModalType') as HTMLElement;
    const modalName = document.getElementById('clientModalName') as HTMLElement;
    const modalBadge = document.getElementById('clientModalBadge') as HTMLElement;

    function openClientModal(index: number) {
      const item = clientData[index];
      if (!item) return;

      modalImg.src = item.image;
      modalImg.alt = item.name;
      modalType.textContent = item.type;
      modalName.textContent = item.name;
      modalBadge.textContent = item.category.toUpperCase();

      if ((window as any).lenis) (window as any).lenis.stop();

      modal.classList.add('is-open');
      modal.setAttribute('aria-hidden', 'false');

      const tl = gsap.timeline();
      tl.fromTo(backdrop, { opacity: 0 }, { opacity: 1, duration: 0.3, ease: 'power2.out' });
      tl.fromTo(container,
        { opacity: 0, scale: 0.9, y: 30 },
        { opacity: 1, scale: 1, y: 0, duration: 0.4, ease: 'back.out(1.5)' },
        '-=0.15'
      );
      tl.fromTo(modal.querySelector('.client-modal__info'),
        { opacity: 0, y: 15 },
        { opacity: 1, y: 0, duration: 0.3, ease: 'power2.out' },
        '-=0.2'
      );
    }

    function closeClientModal() {
      const tl = gsap.timeline({
        onComplete: () => {
          modal.classList.remove('is-open');
          modal.setAttribute('aria-hidden', 'true');
          if ((window as any).lenis) (window as any).lenis.start();
        }
      });
      tl.to(container, { opacity: 0, scale: 0.9, duration: 0.25, ease: 'power2.in' });
      tl.to(backdrop, { opacity: 0, duration: 0.2, ease: 'power2.in' }, '-=0.15');
    }

    // Click on brand card to open modal
    document.querySelectorAll('[data-client-index]').forEach(card => {
      card.addEventListener('click', () => {
        const index = parseInt((card as HTMLElement).dataset.clientIndex || '0');
        openClientModal(index);
      });
      card.addEventListener('keydown', (e) => {
        if ((e as KeyboardEvent).key === 'Enter' || (e as KeyboardEvent).key === ' ') {
          e.preventDefault();
          const index = parseInt((card as HTMLElement).dataset.clientIndex || '0');
          openClientModal(index);
        }
      });
    });

    // Close events
    closeBtn.addEventListener('click', closeClientModal);
    backdrop.addEventListener('click', closeClientModal);
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.classList.contains('is-open')) {
        closeClientModal();
      }
    });
  }

  document.addEventListener('DOMContentLoaded', initClientModal);
  document.addEventListener('astro:page-load', initClientModal);
</script>
