---
/**
 * Footer Section
 * Logo, links, contact, business info, copyright
 */

const currentYear = new Date().getFullYear();

const quickLinks = [
  { label: '홈', href: '/' },
  { label: '서비스', href: '/#services' },
  { label: 'FAQ', href: '/#faq' },
  { label: '문의하기', href: '/#contact' },
];

const serviceLinks = [
  { label: '쇼핑몰', href: '/shop' },
  { label: '온라인 견적', href: '#contact' },
  { label: '포트폴리오', href: '#portfolio' },
  { label: 'A/S 문의', href: '#contact' },
];

const contactInfo = {
  company: 'issac.design',
  phone: '010-1234-5678',
  hours: '평일 09:00~18:00 (토요일 09:00~15:00)',
  address: '서울시 강남구 테헤란로 123 아이삭빌딩 2층',
  businessNumber: '123-45-67890',
  email: 'contact@issac.design',
};
---

<footer class="footer">
  <!-- Top Border Gradient -->
  <div class="footer__border"></div>

  <div class="footer__container">
    <!-- Main Content -->
    <div class="footer__main">
      <!-- Brand Column -->
      <div class="footer__brand">
        <a href="/" class="footer__logo">
          <span class="footer__logo-text">issac.design</span>
        </a>
        <p class="footer__tagline">
          당신의 Brand를 Design하다<br />
          LED Signage · Neon Sign · Advertising Design
        </p>
        <div class="footer__social">
          <a href="#" class="footer__social-link" aria-label="Instagram">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="2" y="2" width="20" height="20" rx="5"/>
              <circle cx="12" cy="12" r="4"/>
              <circle cx="18" cy="6" r="1.5" fill="currentColor" stroke="none"/>
            </svg>
          </a>
          <a href="#" class="footer__social-link" aria-label="YouTube">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2 29 29 0 00.46-5.25 29 29 0 00-.46-5.33z"/>
              <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02" fill="currentColor" stroke="none"/>
            </svg>
          </a>
          <a href="#" class="footer__social-link" aria-label="Blog">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M4 19.5A2.5 2.5 0 016.5 17H20"/>
              <path d="M6.5 2H20v20H6.5A2.5 2.5 0 014 19.5v-15A2.5 2.5 0 016.5 2z"/>
              <line x1="8" y1="7" x2="16" y2="7"/>
              <line x1="8" y1="11" x2="16" y2="11"/>
              <line x1="8" y1="15" x2="12" y2="15"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="footer__column">
        <h4 class="footer__column-title">바로가기</h4>
        <ul class="footer__links">
          {quickLinks.map((link) => (
            <li>
              <a href={link.href} class="footer__link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div class="footer__column">
        <h4 class="footer__column-title">서비스</h4>
        <ul class="footer__links">
          {serviceLinks.map((link) => (
            <li>
              <a href={link.href} class="footer__link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="footer__column footer__column--contact">
        <h4 class="footer__column-title">연락처</h4>
        <ul class="footer__contact-list">
          <li class="footer__contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
            </svg>
            <a href={`tel:${contactInfo.phone}`}>{contactInfo.phone}</a>
          </li>
          <li class="footer__contact-item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
            <span>{contactInfo.hours}</span>
          </li>
          <li class="footer__contact-item footer__contact-item--address">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>{contactInfo.address}</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom -->
    <div class="footer__bottom">
      <div class="footer__business">
        <p class="footer__business-name">{contactInfo.company}</p>
        <span class="footer__business-divider">|</span>
        <p class="footer__business-number">사업자등록번호: {contactInfo.businessNumber}</p>
      </div>
      <div class="footer__legal">
        <a href="#" class="footer__legal-link">이용약관</a>
        <a href="#" class="footer__legal-link">개인정보처리방침</a>
      </div>
      <p class="footer__copyright">
        &copy; {currentYear} issac.design. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    position: relative;
    background: var(--background);
    padding-top: var(--space-4xl);
    overflow: hidden;
  }

  /* Top Border */
  .footer__border {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(102, 187, 106, 0.3) 20%,
      rgba(26, 77, 46, 0.5) 50%,
      rgba(102, 187, 106, 0.3) 80%,
      transparent 100%
    );
  }

  /* Container */
  .footer__container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  /* Main Grid */
  .footer__main {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
    gap: var(--space-3xl);
    padding-bottom: var(--space-3xl);
  }

  /* Brand */
  .footer__brand {
    padding-right: var(--space-2xl);
  }

  .footer__logo {
    display: inline-block;
    margin-bottom: var(--space-lg);
  }

  .footer__logo-text {
    font-size: var(--font-size-2xl);
    font-weight: 700;
    letter-spacing: var(--letter-spacing-tight);
    background: linear-gradient(135deg, var(--text-primary) 0%, var(--primary-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer__tagline {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-xl);
  }

  /* Social Links */
  .footer__social {
    display: flex;
    gap: var(--space-md);
  }

  .footer__social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-md);
    color: var(--text-muted);
    transition: all var(--transition-base);
  }

  .footer__social-link:hover {
    background: rgba(26, 77, 46, 0.3);
    border-color: rgba(102, 187, 106, 0.3);
    color: var(--accent);
    transform: translateY(-2px);
  }

  .footer__social-link svg {
    width: 18px;
    height: 18px;
  }

  /* Columns */
  .footer__column {
    padding-top: var(--space-sm);
  }

  .footer__column-title {
    font-size: var(--font-size-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
    color: var(--text-primary);
    margin-bottom: var(--space-lg);
  }

  /* Links */
  .footer__links {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .footer__link {
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    transition: color var(--transition-base);
  }

  .footer__link:hover {
    color: var(--accent);
  }

  /* Contact List */
  .footer__contact-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .footer__contact-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
    font-size: var(--font-size-sm);
    color: var(--text-muted);
  }

  .footer__contact-item svg {
    flex-shrink: 0;
    width: 16px;
    height: 16px;
    margin-top: 2px;
    color: var(--accent);
  }

  .footer__contact-item a {
    transition: color var(--transition-base);
  }

  .footer__contact-item a:hover {
    color: var(--accent);
  }

  .footer__contact-item--address {
    line-height: var(--line-height-relaxed);
  }

  /* Bottom */
  .footer__bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-md);
    padding: var(--space-xl) 0;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .footer__business {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--font-size-xs);
    color: var(--text-muted);
  }

  .footer__business-divider {
    opacity: 0.3;
  }

  .footer__legal {
    display: flex;
    gap: var(--space-lg);
  }

  .footer__legal-link {
    font-size: var(--font-size-xs);
    color: var(--text-muted);
    transition: color var(--transition-base);
  }

  .footer__legal-link:hover {
    color: var(--accent);
  }

  .footer__copyright {
    font-size: var(--font-size-xs);
    color: var(--text-muted);
    opacity: 0.6;
  }

  /* Responsive: Tablet */
  @media (max-width: 1023px) {
    .footer__main {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-2xl);
    }

    .footer__brand {
      grid-column: 1 / -1;
      padding-right: 0;
      max-width: 400px;
    }
  }

  /* Responsive: Mobile */
  @media (max-width: 719px) {
    .footer {
      padding-top: var(--space-3xl);
    }

    .footer__main {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .footer__brand {
      text-align: center;
      max-width: none;
    }

    .footer__social {
      justify-content: center;
    }

    .footer__column {
      text-align: center;
    }

    .footer__links {
      align-items: center;
    }

    .footer__contact-list {
      align-items: center;
    }

    .footer__contact-item {
      justify-content: center;
      text-align: center;
    }

    .footer__contact-item--address {
      flex-direction: column;
      align-items: center;
      gap: var(--space-xs);
    }

    .footer__bottom {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: var(--space-lg);
    }

    .footer__business {
      flex-direction: column;
      gap: var(--space-xs);
    }

    .footer__business-divider {
      display: none;
    }
  }
</style>
