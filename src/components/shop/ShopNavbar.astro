---
/**
 * ShopNavbar Component
 * Premium navigation bar with category dropdown, search, quote cart badge, mobile menu
 */

import productsData from '../../data/products.json';

const { categories } = productsData;
---

<nav class="shop-navbar" data-shop-navbar>
  <!-- Scroll Progress Bar -->
  <div class="shop-navbar__progress" data-scroll-progress></div>

  <div class="shop-navbar__container">
    <!-- Logo -->
    <a href="/shop" class="shop-navbar__logo">
      <span class="shop-navbar__logo-text">issac.design</span>
      <span class="shop-navbar__logo-badge">Shop</span>
    </a>

    <!-- Desktop Nav Links -->
    <div class="shop-navbar__links">
      <a href="/shop" class="shop-navbar__link" data-nav-link="shop">전체 제품</a>

      <!-- Category Dropdown -->
      <div class="shop-navbar__dropdown" data-dropdown>
        <button class="shop-navbar__link shop-navbar__link--dropdown" data-nav-link="category" type="button">
          <span>카테고리</span>
          <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
            <path d="M3 4.5l3 3 3-3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <div class="shop-navbar__dropdown-menu" data-dropdown-menu>
          {categories.map(cat => (
            <a href={`/shop/category/${cat.id}`} class="shop-navbar__dropdown-item">
              <span class="shop-navbar__dropdown-name">{cat.name}</span>
              <span class="shop-navbar__dropdown-desc">{cat.description}</span>
            </a>
          ))}
        </div>
      </div>

      <a href="/shop/about" class="shop-navbar__link" data-nav-link="about">회사 소개</a>
      <a href="/shop/faq" class="shop-navbar__link" data-nav-link="faq">FAQ</a>
      <a href="/shop/contact" class="shop-navbar__link" data-nav-link="contact">고객센터</a>
    </div>

    <!-- Right Actions -->
    <div class="shop-navbar__actions">
      <!-- Search Button -->
      <button class="shop-navbar__action-btn" data-search-toggle aria-label="검색" type="button">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <circle cx="9" cy="9" r="6" stroke="currentColor" stroke-width="1.5"/>
          <path d="M13.5 13.5L17 17" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </button>

      <!-- Quote Cart Button -->
      <a href="/shop/quote-cart" class="shop-navbar__action-btn shop-navbar__cart-btn" aria-label="견적함" data-quote-cart-btn>
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M6 2L3 6v10a2 2 0 002 2h10a2 2 0 002-2V6l-3-4H6z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M3 6h14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M13 10a3 3 0 01-6 0" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span class="shop-navbar__cart-badge" data-cart-count style="display: none;">0</span>
      </a>

      <!-- CTA Button (Desktop) -->
      <a href="/shop#quote" class="shop-navbar__cta">
        <span>무료 견적</span>
      </a>

      <!-- Mobile Menu Button -->
      <button class="shop-navbar__hamburger" data-mobile-toggle aria-label="메뉴" type="button">
        <span class="shop-navbar__hamburger-line"></span>
        <span class="shop-navbar__hamburger-line"></span>
        <span class="shop-navbar__hamburger-line"></span>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="shop-navbar__mobile" data-mobile-menu>
    <div class="shop-navbar__mobile-inner">
      <div class="shop-navbar__mobile-links">
        <a href="/shop" class="shop-navbar__mobile-link">전체 제품</a>
        <div class="shop-navbar__mobile-group">
          <span class="shop-navbar__mobile-group-title">카테고리</span>
          {categories.map(cat => (
            <a href={`/shop/category/${cat.id}`} class="shop-navbar__mobile-link shop-navbar__mobile-link--sub">
              {cat.name}
            </a>
          ))}
        </div>
        <a href="/shop/about" class="shop-navbar__mobile-link">회사 소개</a>
        <a href="/shop/faq" class="shop-navbar__mobile-link">FAQ</a>
        <a href="/shop/contact" class="shop-navbar__mobile-link">고객센터</a>
        <a href="/shop/quote-cart" class="shop-navbar__mobile-link">
          견적함
          <span class="shop-navbar__mobile-badge" data-mobile-cart-count style="display: none;">0</span>
        </a>
      </div>
      <div class="shop-navbar__mobile-cta">
        <a href="/shop#quote" class="shop-navbar__mobile-cta-btn">무료 견적 문의</a>
      </div>
    </div>
  </div>
</nav>

<style>
  .shop-navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    z-index: var(--z-sticky);
    transition: transform 0.3s ease;
  }

  .shop-navbar.hidden {
    transform: translateY(-100%);
  }

  /* Scroll Progress */
  .shop-navbar__progress {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--primary), var(--accent));
    width: 0%;
    transition: width 0.1s linear;
    z-index: 1;
  }

  .shop-navbar__container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--container-padding);
    height: var(--header-height);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
  }

  /* Logo */
  .shop-navbar__logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex-shrink: 0;
    transition: opacity var(--transition-base);
  }

  .shop-navbar__logo:hover {
    opacity: 0.8;
  }

  .shop-navbar__logo-text {
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--text-primary);
    letter-spacing: var(--letter-spacing-tight);
  }

  .shop-navbar__logo-badge {
    padding: 2px 8px;
    background: var(--primary);
    color: var(--text-primary);
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wider);
    border-radius: var(--radius-sm);
  }

  /* Links */
  .shop-navbar__links {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    flex: 1;
    justify-content: center;
  }

  .shop-navbar__link {
    position: relative;
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--text-secondary);
    transition: color var(--transition-base);
    padding: var(--space-sm) 0;
    background: none;
    border: none;
    cursor: pointer;
  }

  .shop-navbar__link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--primary);
    transition: width var(--transition-base);
  }

  .shop-navbar__link:hover,
  .shop-navbar__link--active {
    color: var(--text-primary);
  }

  .shop-navbar__link:hover::after,
  .shop-navbar__link--active::after {
    width: 100%;
  }

  /* Dropdown */
  .shop-navbar__link--dropdown {
    display: inline-flex;
    align-items: center;
    gap: 4px;
  }

  .shop-navbar__link--dropdown svg {
    transition: transform var(--transition-base);
  }

  .shop-navbar__dropdown {
    position: relative;
  }

  .shop-navbar__dropdown-menu {
    position: absolute;
    top: calc(100% + var(--space-sm));
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    min-width: 240px;
    background: rgba(17, 17, 17, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: var(--space-sm);
    opacity: 0;
    visibility: hidden;
    transition: all 0.25s ease;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
  }

  .shop-navbar__dropdown:hover .shop-navbar__dropdown-menu,
  .shop-navbar__dropdown.open .shop-navbar__dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .shop-navbar__dropdown:hover .shop-navbar__link--dropdown svg {
    transform: rotate(180deg);
  }

  .shop-navbar__dropdown-item {
    display: flex;
    flex-direction: column;
    gap: 2px;
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .shop-navbar__dropdown-item:hover {
    background: rgba(26, 77, 46, 0.15);
  }

  .shop-navbar__dropdown-name {
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--text-primary);
  }

  .shop-navbar__dropdown-desc {
    font-size: var(--font-size-xs);
    color: var(--text-muted);
  }

  /* Actions */
  .shop-navbar__actions {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    flex-shrink: 0;
  }

  .shop-navbar__action-btn {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: none;
    border: 1px solid transparent;
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .shop-navbar__action-btn:hover {
    color: var(--text-primary);
    border-color: var(--border);
    background: rgba(255, 255, 255, 0.05);
  }

  /* Cart Badge */
  .shop-navbar__cart-badge {
    position: absolute;
    top: 4px;
    right: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 16px;
    height: 16px;
    padding: 0 4px;
    background: var(--cart-badge-bg);
    color: var(--cart-badge-text);
    font-size: 9px;
    font-weight: 700;
    border-radius: 8px;
  }

  /* CTA */
  .shop-navbar__cta {
    display: inline-flex;
    align-items: center;
    padding: var(--space-sm) var(--space-lg);
    background: var(--primary);
    color: var(--text-primary);
    font-size: var(--font-size-sm);
    font-weight: 600;
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .shop-navbar__cta:hover {
    background: var(--primary-hover);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(26, 77, 46, 0.3);
  }

  /* Hamburger */
  .shop-navbar__hamburger {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 40px;
    height: 40px;
    padding: 10px 8px;
    background: none;
    border: none;
    cursor: pointer;
  }

  .shop-navbar__hamburger-line {
    width: 100%;
    height: 2px;
    background: var(--text-primary);
    border-radius: 2px;
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .shop-navbar__hamburger.active .shop-navbar__hamburger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .shop-navbar__hamburger.active .shop-navbar__hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .shop-navbar__hamburger.active .shop-navbar__hamburger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* Mobile Menu */
  .shop-navbar__mobile {
    position: fixed;
    top: var(--header-height);
    left: 0;
    width: 100%;
    height: calc(100vh - var(--header-height));
    background: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    transform: translateX(100%);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow-y: auto;
    z-index: var(--z-modal);
    display: none;
  }

  .shop-navbar__mobile.open {
    transform: translateX(0);
  }

  .shop-navbar__mobile-inner {
    padding: var(--space-xl) var(--container-padding);
    display: flex;
    flex-direction: column;
    min-height: 100%;
  }

  .shop-navbar__mobile-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    flex: 1;
  }

  .shop-navbar__mobile-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-md) var(--space-sm);
    font-size: var(--font-size-lg);
    font-weight: 500;
    color: var(--text-primary);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    transition: color var(--transition-base);
  }

  .shop-navbar__mobile-link:hover {
    color: var(--primary);
  }

  .shop-navbar__mobile-link--sub {
    padding-left: var(--space-xl);
    font-size: var(--font-size-base);
    font-weight: 400;
    color: var(--text-secondary);
  }

  .shop-navbar__mobile-group {
    display: flex;
    flex-direction: column;
  }

  .shop-navbar__mobile-group-title {
    display: block;
    padding: var(--space-md) var(--space-sm) var(--space-xs);
    font-size: var(--font-size-xs);
    font-weight: 600;
    color: var(--primary);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wider);
  }

  .shop-navbar__mobile-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 20px;
    height: 20px;
    padding: 0 6px;
    background: var(--primary);
    color: var(--text-primary);
    font-size: var(--font-size-xs);
    font-weight: 700;
    border-radius: var(--radius-full);
  }

  .shop-navbar__mobile-cta {
    padding-top: var(--space-xl);
  }

  .shop-navbar__mobile-cta-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: var(--space-md);
    background: var(--primary);
    color: var(--text-primary);
    font-size: var(--font-size-base);
    font-weight: 600;
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .shop-navbar__mobile-cta-btn:hover {
    background: var(--primary-hover);
  }

  /* Responsive */
  @media (max-width: 1023px) {
    .shop-navbar__links {
      gap: var(--space-md);
    }

    .shop-navbar__link {
      font-size: var(--font-size-xs);
    }
  }

  @media (max-width: 719px) {
    .shop-navbar__container {
      height: var(--header-height-mobile);
    }

    .shop-navbar__logo-text {
      font-size: var(--font-size-lg);
    }

    .shop-navbar__links {
      display: none;
    }

    .shop-navbar__cta {
      display: none;
    }

    .shop-navbar__hamburger {
      display: flex;
    }

    .shop-navbar__mobile {
      display: block;
      top: var(--header-height-mobile);
      height: calc(100vh - var(--header-height-mobile));
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const navbar = document.querySelector('[data-shop-navbar]') as HTMLElement;
    if (!navbar) return;

    // --- Scroll Progress Bar ---
    const progressBar = navbar.querySelector('[data-scroll-progress]') as HTMLElement;
    if (progressBar) {
      window.addEventListener('scroll', () => {
        const scrollTop = window.scrollY;
        const docHeight = document.documentElement.scrollHeight - window.innerHeight;
        const progress = docHeight > 0 ? (scrollTop / docHeight) * 100 : 0;
        progressBar.style.width = `${Math.min(progress, 100)}%`;
      }, { passive: true });
    }

    // --- Scroll Hide/Show ---
    let lastScrollY = 0;
    let ticking = false;

    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          const currentScrollY = window.scrollY;
          if (currentScrollY > 200 && currentScrollY > lastScrollY) {
            navbar.classList.add('hidden');
          } else {
            navbar.classList.remove('hidden');
          }
          lastScrollY = currentScrollY;
          ticking = false;
        });
        ticking = true;
      }
    }, { passive: true });

    // --- Mobile Menu ---
    const mobileToggle = navbar.querySelector('[data-mobile-toggle]') as HTMLElement;
    const mobileMenu = navbar.querySelector('[data-mobile-menu]') as HTMLElement;

    if (mobileToggle && mobileMenu) {
      mobileToggle.addEventListener('click', () => {
        const isOpen = mobileMenu.classList.contains('open');
        mobileToggle.classList.toggle('active');
        mobileMenu.classList.toggle('open');
        document.body.style.overflow = isOpen ? '' : 'hidden';
      });

      // Close on link click
      mobileMenu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          mobileToggle.classList.remove('active');
          mobileMenu.classList.remove('open');
          document.body.style.overflow = '';
        });
      });
    }

    // --- Search Toggle ---
    const searchToggle = navbar.querySelector('[data-search-toggle]');
    if (searchToggle) {
      searchToggle.addEventListener('click', () => {
        const searchOverlay = document.querySelector('[data-search-overlay]');
        if (searchOverlay) {
          searchOverlay.classList.add('open');
          document.body.style.overflow = 'hidden';
          const searchInput = searchOverlay.querySelector('input');
          if (searchInput) searchInput.focus();
        }
      });
    }

    // --- Quote Cart Badge ---
    function updateCartBadge() {
      try {
        const cart = JSON.parse(localStorage.getItem('quoteCart') || '[]');
        const count = cart.length;
        const badges = document.querySelectorAll('[data-cart-count], [data-mobile-cart-count]');
        badges.forEach(badge => {
          const el = badge as HTMLElement;
          if (count > 0) {
            el.textContent = String(count);
            el.style.display = 'flex';
          } else {
            el.style.display = 'none';
          }
        });
      } catch (e) {
        // Ignore parse errors
      }
    }

    updateCartBadge();
    window.addEventListener('quote-cart-updated', updateCartBadge);

    // --- Active link detection ---
    const currentPath = window.location.pathname;
    const navLinks = navbar.querySelectorAll('[data-nav-link]');
    navLinks.forEach(link => {
      const href = link.getAttribute('href') || (link as HTMLElement).closest('a')?.getAttribute('href');
      if (href && currentPath === href) {
        link.classList.add('shop-navbar__link--active');
      }
    });
  });
</script>
