---
/**
 * ProductionTimeline Component
 * Vertical timeline showing product-specific manufacturing steps
 */

interface Props {
  steps: Array<{
    step: number;
    duration: string;
    description: string;
  }>;
}

const { steps } = Astro.props;
---

{steps && steps.length > 0 && (
  <section class="production-timeline" data-production-timeline>
    <div class="production-timeline__container">
      <!-- Section Header -->
      <div class="production-timeline__header">
        <h2 class="production-timeline__title">제작 과정</h2>
        <p class="production-timeline__subtitle">
          이 제품은 이렇게 만들어집니다
        </p>
      </div>

      <!-- Timeline -->
      <div class="production-timeline__track">
        {steps.map((item, index) => (
          <div
            class="production-timeline__step"
            data-production-step
          >
            {/* Step Circle + Connecting Line */}
            <div class="production-timeline__step-indicator">
              <div class="production-timeline__step-circle">
                <span class="production-timeline__step-number">
                  {item.step}
                </span>
              </div>
              {index < steps.length - 1 && (
                <div class="production-timeline__connector" />
              )}
            </div>

            {/* Step Content */}
            <div class="production-timeline__step-content">
              <p class="production-timeline__step-description">
                {item.description}
              </p>
              <span class="production-timeline__step-duration">
                {item.duration}
              </span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
)}

<style>
  .production-timeline {
    position: relative;
    padding: var(--space-4xl) 0;
  }

  .production-timeline__container {
    width: 100%;
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--container-padding);
  }

  /* Header */
  .production-timeline__header {
    margin-bottom: var(--space-3xl);
  }

  .production-timeline__title {
    font-size: var(--font-size-3xl);
    font-weight: 600;
    line-height: var(--line-height-tight);
    letter-spacing: var(--letter-spacing-tight);
    color: var(--text-primary);
    margin-bottom: var(--space-xs);
  }

  .production-timeline__subtitle {
    font-size: var(--font-size-base);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
  }

  /* Timeline Track */
  .production-timeline__track {
    display: flex;
    flex-direction: column;
    gap: 0;
    max-width: 640px;
  }

  /* Individual Step */
  .production-timeline__step {
    display: flex;
    align-items: flex-start;
    gap: var(--space-xl);
    position: relative;
  }

  /* Step Indicator (circle + line) */
  .production-timeline__step-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
  }

  /* Step Circle */
  .production-timeline__step-circle {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-full);
    border: 2px solid var(--primary);
    background: var(--surface);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    position: relative;
    z-index: 1;
    transition: background var(--transition-base), color var(--transition-base);
  }

  .production-timeline__step:hover .production-timeline__step-circle {
    background: var(--primary);
  }

  .production-timeline__step-number {
    font-size: var(--font-size-base);
    font-weight: 700;
    color: var(--primary);
    line-height: 1;
    transition: color var(--transition-base);
  }

  .production-timeline__step:hover .production-timeline__step-number {
    color: var(--text-primary);
  }

  /* Connecting Line */
  .production-timeline__connector {
    width: 2px;
    height: 100%;
    min-height: 32px;
    background: var(--border);
    flex-shrink: 0;
  }

  /* Step Content */
  .production-timeline__step-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding-top: var(--space-sm);
    padding-bottom: var(--space-2xl);
  }

  .production-timeline__step-description {
    font-size: var(--font-size-base);
    font-weight: 500;
    color: var(--text-primary);
    line-height: var(--line-height-normal);
  }

  .production-timeline__step-duration {
    display: inline-flex;
    align-items: center;
    padding: var(--space-xs) var(--space-sm);
    background: var(--surface-light);
    color: var(--text-muted);
    font-size: var(--font-size-xs);
    font-weight: 500;
    letter-spacing: var(--letter-spacing-wide);
    border-radius: var(--radius-full);
    width: fit-content;
  }

  /* Last step: no bottom padding on content */
  .production-timeline__step:last-child .production-timeline__step-content {
    padding-bottom: 0;
  }

  /* Responsive: Tablet */
  @media (min-width: 720px) and (max-width: 1023px) {
    .production-timeline__title {
      font-size: var(--font-size-2xl);
    }
  }

  /* Responsive: Mobile */
  @media (max-width: 719px) {
    .production-timeline {
      padding: var(--space-3xl) 0;
    }

    .production-timeline__header {
      margin-bottom: var(--space-2xl);
    }

    .production-timeline__title {
      font-size: var(--font-size-2xl);
    }

    .production-timeline__subtitle {
      font-size: var(--font-size-sm);
    }

    .production-timeline__step {
      gap: var(--space-md);
    }

    .production-timeline__step-circle {
      width: 40px;
      height: 40px;
    }

    .production-timeline__step-number {
      font-size: var(--font-size-sm);
    }

    .production-timeline__step-content {
      padding-bottom: var(--space-xl);
    }

    .production-timeline__step-description {
      font-size: var(--font-size-sm);
    }

    .production-timeline__step-duration {
      font-size: 0.6875rem;
    }
  }
</style>
